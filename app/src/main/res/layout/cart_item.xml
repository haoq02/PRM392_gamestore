<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- ImageView cho sản phẩm -->
    <ImageView
        android:id="@+id/cartProductImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/cartProductNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Giá sản phẩm -->
        <TextView
            android:id="@+id/cartProductPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="14sp" />

        <!-- Số lượng và các nút tăng giảm -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Nút giảm số lượng -->
            <Button
                android:id="@+id/decreaseButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="-" />

            <!-- Hiển thị số lượng -->
            <TextView
                android:id="@+id/cartProductQuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="1"
                android:textSize="14sp"
                android:gravity="center" />

            <!-- Nút tăng số lượng -->
            <Button
                android:id="@+id/increaseButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="+" />
        </LinearLayout>
    </LinearLayout>

    <!-- Nút xóa sản phẩm -->
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove" />
</LinearLayout>
